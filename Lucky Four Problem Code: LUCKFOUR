#include<iostream>
using namespace std;
int main(){
    int i,k,n;
    cin>>n;
    int ar[n];
    for(i=0;i<n;i++){
        cin>>ar[i];
    }
    for(i=0;i<n;i++){
        k=0;
        while(ar[i]!=0){
        if(ar[i]%10==4){
            k+=1;
        }
        ar[i]/=10;
        }
        cout<<k<<endl;
    }
}
